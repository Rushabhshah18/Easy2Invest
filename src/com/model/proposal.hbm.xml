<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.model">
	<class name="proposal" table="proposal">
		<id column="Id" name="id">
			<generator class="increment"></generator>
		</id>
		<property column="senderName" name="sender"></property>
		<property column="receiverName" name="receiver"></property>
		<property column="amount" name="amount"></property>
		
		<property column="proposalIdea" name="proposalIdea"></property>
		<property column="city" name="city"></property>
		<property column="email" name="email"></property>
			
	</class>
</hibernate-mapping>
